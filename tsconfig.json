{
    "files": ["src/index.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "dist",
        "noImplicitAny": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": ["ES2021","DOM"],
        "module": "commonjs",
        "target": "ES2021",
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "sourceMap": true
    }
}